<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>Snowtricks | {% block title %}Page{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}" />
            <link rel="stylesheet" href="{{ asset('css/font-awesome.min.css') }}" />
            <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
        {% endblock %}
    </head>
    <body>
        {% for message in app.flashes('notice') %}
            <div class="alert alert-notice">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-error">
                {{ message }}
            </div>
        {% endfor %}

        <nav class="navbar navbar-expand-md navbar-dark bg-primary">
            <a class="navbar-brand abs logo" href="/index.php"></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsingNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse" id="collapsingNavbar">
                <ul class="navbar-nav">

                </ul>
                <ul class="navbar-nav ml-auto">
                    {% if is_granted('ROLE_USER') %}
                        <li class="nav-item"><a class="nav-link" href="{{ path('app_trick_new') }}">Nouvelle figure</a></li>
                    {% endif %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_tricks') }}">Les figures</a>
                    </li>
                    {% if is_granted('ROLE_USER') %}
                        <li class="nav-item"><a class="nav-link" href="{{ path('app_myaccount') }}">Mon compte</a></li>
                        <li class="nav-item"><a class="nav-link" href="{{ path('app_logout') }}">Déconnexion</a></li>

                    {% else %}
                        <li class="nav-item"><a class="nav-link" href="{{ path('app_login') }}">Connexion</a></li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_register') }}">Inscription</a>
                        </li>
                    {% endif %}


                </ul>
            </div>
        </nav>

        <!-- Modal Alert -->
        <div id="myModalAlert" class="modal fade" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title ModalAlertTitle">Confirmation de supression</h4>
                    </div>
                    <div class="modal-body ModalAlertContent">
                        <p>texte</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Continuer</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal Confirm -->
        <div id="myModal" class="modal fade" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title ModalConfirmTitle">Confirmation de supression</h4>
                    </div>
                    <div class="modal-body ModalConfirmContent">
                        <p>texte</p>
                    </div>
                    <div class="modal-footer">
                        <a href="#" class="btn btn-primary btnmodalconfirm">Oui</a>
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Non</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal media -->
        <div id="mediaModal" class="modal fade" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Confirmation de supression</h4>
                    </div>
                    <div class="modal-body">
                        <p>Etes vous sur de vouloir supprimer ce media.</p>
                    </div>
                    <div class="modal-footer">
                        <a href="#" class="btn btn-primary btnmodalmediadel" data-dismiss="modal">Oui</a>
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Non</button>
                    </div>
                </div>
            </div>
        </div>

        {% block body %}{% endblock %}

        <footer class="d-flex">
            <div>Copyright - snowtricks.com &copy; {{ "now"|date('Y') }}</div>
            <div class="text-right flex-grow-1"><a href="{{ path('ml') }}">Mentions légales</a></div>
        </footer>

        {% block javascripts %}
        <script src="/js/jquery-3.3.1.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.bundle.min.js"></script>

        <script src="/js/client.js"></script>
        {% endblock %}
    </body>
</html>
