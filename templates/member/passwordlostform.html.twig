{% extends "base.html.twig" %}

{% block title %}Snowtrick | Récupération du mot de passe{% endblock %}

{% block body %}
<div class="container">
    <div class="col-lg-12 text-center mt-4">
        <div class="block p-4">
            <div>Veuillez saisir l'adresse email associé au compte afin de récupérer votre mot de passe</div>
            {% if message == '' %}
            {{ form_start(form) }}
            {{ form_row(form.email) }}
            <button type="submit" class="btn btn-primary">Envoyer le mail</button>
            {{ form_end(form) }}
            {% else %}
                <br />{{ message }}<br /><br />
                <a href="{{ path('app_account_lostpassword') }}">Continuer</a>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}