{% extends "base.html.twig" %}

{% block title %}Snowtrick | Connexion{% endblock %}

{% block body %}


    <div class="container">
    <div class="col-lg-12 text-center p-4">
        <h1>Identification</h1>
        <div class="block p-3">
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

        {{ form_start(form, {'action': path('app_login'), 'method': 'POST'}) }}
        {{ form_widget(form) }}
        <input type="hidden" name="_target_path" value="/" />
        <input type="hidden" name="_username" value="/" />
        {{ form_end(form) }}

            <div><a href="{{ path('app_account_lostpassword') }}">Mot de passe perdu</a> </div>
        </div>
    </div>
    </div>
{% endblock %}